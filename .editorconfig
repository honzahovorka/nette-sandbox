# .editorconfig file helps developers define and maintain
# consistent coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4

[composer.lock]
indent_size = 4
